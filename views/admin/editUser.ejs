<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/css.css">
    <title>
        <%= general.title %>
    </title>

</head>


<body>
        <%- include('../template/header', {title: general.title, description: general.description, logo: general.logo })
            %>
            
                <main >
                    <%- include('../template/admNav') %>
                    <h2>
                        Edit: "<%= user.username %>"
                    </h2>
                        <div id="adminUsers">
                        <form method="post" action="/admin/edituser/<%=user.id %>">
                           
                             <br>Username:<br><input type="text" name="uname" value="<%= user.username %>">
                            <br> Password:<br><input type="password" name="pw">
                            <br> Ripeti Password:<br><input type="password" name="pw2">
                            <br> Email:<br><input type="email" name="email" value="<%= user.email %>">
                            <fieldset>
                                <legend>Permessi:</legend>
                                <div>
                                  <input type="radio" id="admin" name="userType" value="admin" 
                                  <% if(user.userType==="admin"){ %>
                                    checked="checked"
                                    <% } %>
                                     />
                                  <label for="admin">Admin</label>
                            
                                  <input type="radio" id="writer" name="userType" value="writer" 
                                  <% if(user.userType==="writer"){ %>
                                    checked="checked"
                                    <% } %>
                                     />
                                  <label for="writer">Writer</label>
                            
                                  <input type="radio" id="user" name="userType" value="user" 
                                  <% if(user.userType==="user"){ %>
                                    checked="checked"
                                    <% } %>
                                     />
                                  <label for="user">User</label>
                                </div>
                                <div>
                                </div>
                              </fieldset>
                            
                            <br><br><input type="submit" value="Aggiorna">
                        </form>
                    <ul id="userList">
                        <% users.forEach(function(user) { %>
                            <li class="useritem">
                                <span>
                                    <%= user.username %>
                                </span>
                                <span>
                                    <%= user.email %>
                                </span>
                                <a href="/admin/user/edit/<%= user._id %>"> <img src="/images/edit.png" class="imgsmall"
                                        alt="edit"></a>
                                <a href="/admin/user/delete/<%= user._id %>"> <img src="/images/cancel.png" class="imgsmall"
                                        alt="delete"></a>
                                <a href="/admin/user/disable/<%= user._id %>"> <img src="/images/disable.png" class="imgsmall"
                                        alt="disable"></a>
                            </li>
                            <% }); %>
                     </ul>

                    </div>
                </main>
            <%- include('../template/footer') %>
</body>

</html>